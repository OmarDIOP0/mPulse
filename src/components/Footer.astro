---
// src/components/Footer.astro
import AppStore from '../assets/icons/app-store.png'
import GooglePlay from '../assets/icons/play-store.png'
const footerLinks = [
    {
        title: "Produit",
        links: [
            { name: "Fonctionnalités", href: "/features" },
            { name: "Tarifs", href: "/pricing" },
            { name: "Applications", href: "#" },
            { name: "Nouveautés", href: "#" },
        ]
    },
    {
        title: "Entreprise",
        links: [
            { name: "À propos", href: "/about" },
            { name: "Carrières", href: "#" },
            { name: "Presse", href: "#" },
            { name: "Contact", href: "/contact" },
        ]
    },
    {
        title: "Ressources",
        links: [
            { name: "Blog", href: "#" },
            { name: "Aide", href: "#" },
            { name: "Tutoriels", href: "#" },
            { name: "Support", href: "#" },
        ]
    },
];
---
<footer class="bg-[#09090b] text-white pt-16 pb-8">
    <div class="container mx-auto px-6">
        <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-5 gap-12">
            <div class="lg:col-span-2">
                <a href="/" class="flex items-center space-x-2 mb-6">
                    <h1 class="text-2xl font-bold text-white">m<span class="text-[#ffd100]">Pulse</span></h1>
                </a>
                <p class="text-gray-400 mb-6">
                    La solution ultime pour une gestion budgétaire intelligente et intuitive.
                </p>
                <div class="flex space-x-4">
                    <a href="#" class="text-gray-400 hover:text-white" target="_blank">
                        <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
