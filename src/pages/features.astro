---
// src/pages/features.astro
import Layout from '../layouts/Layout.astro';
---

<!-- Section Fonctionnalités - Version Compacte et Moderne -->
<section class="relative py-16 bg-gradient-to-br from-white via-blue-50/30 to-gray-50 overflow-hidden">
    <!-- Éléments décoratifs subtils -->
    <div class="absolute top-0 right-0 w-72 h-72 bg-[#ffd100]/10 rounded-full blur-3xl opacity-40"></div>
    <div class="absolute bottom-0 left-0 w-80 h-80 bg-[#00377d]/5 rounded-full blur-3xl opacity-30"></div>
    
    <div class="container mx-auto px-4 sm:px-6 relative z-10">
        <!-- En-tête compact -->
        <div class="text-center max-w-2xl mx-auto mb-12">
            <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-3">Tout ce dont vous avez besoin</h2>
            <p class="text-lg text-gray-600 leading-relaxed">
                Une suite complète d'outils pour gérer efficacement votre commerce
            </p>
        </div>

        <!-- Grille compacte des fonctionnalités -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 max-w-6xl mx-auto">
            <!-- Gestion des ventes -->
            <div class="group bg-white/80 backdrop-blur-sm rounded-xl border border-gray-200/60 p-5 transition-all duration-300 hover:shadow-lg hover:border-[#00377d]/20 hover:scale-105 hover:bg-white">
                <div class="flex items-start gap-3">
                    <div class="flex-shrink-0 w-10 h-10 bg-gradient-to-br from-[#00377d] to-[#002a63] text-white rounded-lg flex items-center justify-center shadow-sm group-hover:scale-110 transition-transform duration-300">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                        </svg>
                    </div>
                    <div class="flex-grow">
                        <h3 class="text-lg font-semibold text-gray-900 mb-1 group-hover:text-[#00377d] transition-colors">Ventes</h3>
                        <p class="text-sm text-gray-600 leading-relaxed">Enregistrez et suivez vos transactions en temps réel</p>
                    </div>
                </div>
            </div>

            <!-- Encaissements -->
            <div class="group bg-white/80 backdrop-blur-sm rounded-xl border border-gray-200/60 p-5 transition-all duration-300 hover:shadow-lg hover:border-[#ffd100]/40 hover:scale-105 hover:bg-white">
                <div class="flex items-start gap-3">
                    <div class="flex-shrink-0 w-10 h-10 bg-gradient-to-br from-[#ffd100] to-[#ffed4e] text-[#00377d] rounded-lg flex items-center justify-center shadow-sm group-hover:scale-110 transition-transform duration-300">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z" />
                        </svg>
                    </div>
                    <div class="flex-grow">
                        <h3 class="text-lg font-semibold text-gray-900 mb-1 group-hover:text-[#00377d] transition-colors">Encaissements</h3>
                        <p class="text-sm text-gray-600 leading-relaxed">Suivez paiements et historique détaillé</p>
                    </div>
                </div>
            </div>

            <!-- Gestion du stock -->
            <div class="group bg-white/80 backdrop-blur-sm rounded-xl border border-gray-200/60 p-5 transition-all duration-300 hover:shadow-lg hover:border-[#00377d]/20 hover:scale-105 hover:bg-white">
                <div class="flex items-start gap-3">
                    <div class="flex-shrink-0 w-10 h-10 bg-gradient-to-br from-[#00377d] to-[#002a63] text-white rounded-lg flex items-center justify-center shadow-sm group-hover:scale-110 transition-transform duration-300">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
                        </svg>
                    </div>
                    <div class="flex-grow">
                        <h3 class="text-lg font-semibold text-gray-900 mb-1 group-hover:text-[#00377d] transition-colors">Stock</h3>
                        <p class="text-sm text-gray-600 leading-relaxed">Contrôlez entrées/sorties avec alertes</p>
                    </div>
                </div>
            </div>

            <!-- Suivi clients -->
            <div class="group bg-white/80 backdrop-blur-sm rounded-xl border border-gray-200/60 p-5 transition-all duration-300 hover:shadow-lg hover:border-[#ffd100]/40 hover:scale-105 hover:bg-white">
                <div class="flex items-start gap-3">
                    <div class="flex-shrink-0 w-10 h-10 bg-gradient-to-br from-[#ffd100] to-[#ffed4e] text-[#00377d] rounded-lg flex items-center justify-center shadow-sm group-hover:scale-110 transition-transform duration-300">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                        </svg>
                    </div>
                    <div class="flex-grow">
                        <h3 class="text-lg font-semibold text-gray-900 mb-1 group-hover:text-[#00377d] transition-colors">Clients</h3>
                        <p class="text-sm text-gray-600 leading-relaxed">Relation client avec historique complet</p>
                    </div>
                </div>
            </div>

            <!-- Fournisseurs -->
            <div class="group bg-white/80 backdrop-blur-sm rounded-xl border border-gray-200/60 p-5 transition-all duration-300 hover:shadow-lg hover:border-[#00377d]/20 hover:scale-105 hover:bg-white">
                <div class="flex items-start gap-3">
                    <div class="flex-shrink-0 w-10 h-10 bg-gradient-to-br from-[#00377d] to-[#002a63] text-white rounded-lg flex items-center justify-center shadow-sm group-hover:scale-110 transition-transform duration-300">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                        </svg>
                    </div>
                    <div class="flex-grow">
                        <h3 class="text-lg font-semibold text-gray-900 mb-1 group-hover:text-[#00377d] transition-colors">Fournisseurs</h3>
                        <p class="text-sm text-gray-600 leading-relaxed">Centralisez commandes et relations</p>
                    </div>
                </div>
            </div>

            <!-- Employés -->
            <div class="group bg-white/80 backdrop-blur-sm rounded-xl border border-gray-200/60 p-5 transition-all duration-300 hover:shadow-lg hover:border-[#ffd100]/40 hover:scale-105 hover:bg-white">
                <div class="flex items-start gap-3">
                    <div class="flex-shrink-0 w-10 h-10 bg-gradient-to-br from-[#ffd100] to-[#ffed4e] text-[#00377d] rounded-lg flex items-center justify-center shadow-sm group-hover:scale-110 transition-transform duration-300">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z" />
                        </svg>
                    </div>
                    <div class="flex-grow">
                        <h3 class="text-lg font-semibold text-gray-900 mb-1 group-hover:text-[#00377d] transition-colors">Équipe</h3>
                        <p class="text-sm text-gray-600 leading-relaxed">Gérez accès et rôles de votre personnel</p>
                    </div>
                </div>
            </div>

            <!-- Historique -->
            <div class="group bg-white/80 backdrop-blur-sm rounded-xl border border-gray-200/60 p-5 transition-all duration-300 hover:shadow-lg hover:border-[#00377d]/20 hover:scale-105 hover:bg-white">
                <div class="flex items-start gap-3">
                    <div class="flex-shrink-0 w-10 h-10 bg-gradient-to-br from-[#00377d] to-[#002a63] text-white rounded-lg flex items-center justify-center shadow-sm group-hover:scale-110 transition-transform duration-300">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                        </svg>
                    </div>
                    <div class="flex-grow">
                        <h3 class="text-lg font-semibold text-gray-900 mb-1 group-hover:text-[#00377d] transition-colors">Historique</h3>
                        <p class="text-sm text-gray-600 leading-relaxed">Archive complète de vos opérations</p>
                    </div>
                </div>
            </div>

            <!-- Tableau de bord -->
            <div class="group bg-white/80 backdrop-blur-sm rounded-xl border border-gray-200/60 p-5 transition-all duration-300 hover:shadow-lg hover:border-[#ffd100]/40 hover:scale-105 hover:bg-white">
                <div class="flex items-start gap-3">
                    <div class="flex-shrink-0 w-10 h-10 bg-gradient-to-br from-[#ffd100] to-[#ffed4e] text-[#00377d] rounded-lg flex items-center justify-center shadow-sm group-hover:scale-110 transition-transform duration-300">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17V7m0 10a2 2 0 01-2 2H5a2 2 0 01-2-2V7a2 2 0 012-2h2a2 2 0 012 2m0 10a2 2 0 002 2h2a2 2 0 002-2M9 7a2 2 0 012-2h2a2 2 0 012 2m0 10V7m0 10a2 2 0 002 2h2a2 2 0 002-2V7a2 2 0 00-2-2h-2a2 2 0 00-2 2" />
                        </svg>
                    </div>
                    <div class="flex-grow">
                        <h3 class="text-lg font-semibold text-gray-900 mb-1 group-hover:text-[#00377d] transition-colors">Dashboard</h3>
                        <p class="text-sm text-gray-600 leading-relaxed">Vue d'ensemble avec indicateurs clés</p>
                    </div>
                </div>
            </div>

            <!-- Rapports -->
            <div class="group bg-white/80 backdrop-blur-sm rounded-xl border border-gray-200/60 p-5 transition-all duration-300 hover:shadow-lg hover:border-[#00377d]/20 hover:scale-105 hover:bg-white">
                <div class="flex items-start gap-3">
                    <div class="flex-shrink-0 w-10 h-10 bg-gradient-to-br from-[#00377d] to-[#002a63] text-white rounded-lg flex items-center justify-center shadow-sm group-hover:scale-110 transition-transform duration-300">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                        </svg>
                    </div>
                    <div class="flex-grow">
                        <h3 class="text-lg font-semibold text-gray-900 mb-1 group-hover:text-[#00377d] transition-colors">Rapports</h3>
                        <p class="text-sm text-gray-600 leading-relaxed">Analysez performances et résultats</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- CTA compact -->
        <div class="text-center mt-12">
            <a href="#contact" class="inline-flex items-center gap-2 bg-gradient-to-r from-[#00377d] to-[#002a63] text-white px-6 py-3 rounded-full font-medium hover:shadow-lg transition-all duration-300 hover:scale-105">
                <span>Démarrer maintenant</span>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                </svg>
            </a>
        </div>
    </div>
</section>

<style>
    /* Animations améliorées */
    .group {
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    }
    
    .group:hover {
        transform: translateY(-4px);
        box-shadow: 0 20px 40px -10px rgba(0, 55, 125, 0.15);
    }
    
    /* Animation d'entrée pour les éléments */
    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    
    .grid > * {
        animation: fadeInUp 0.6s ease-out forwards;
    }
    
    /* Délais d'animation pour chaque élément */
    .grid > *:nth-child(1) { animation-delay: 0.1s; }
    .grid > *:nth-child(2) { animation-delay: 0.2s; }
    .grid > *:nth-child(3) { animation-delay: 0.3s; }
    .grid > *:nth-child(4) { animation-delay: 0.4s; }
    .grid > *:nth-child(5) { animation-delay: 0.5s; }
    .grid > *:nth-child(6) { animation-delay: 0.6s; }
    .grid > *:nth-child(7) { animation-delay: 0.7s; }
    .grid > *:nth-child(8) { animation-delay: 0.8s; }
    .grid > *:nth-child(9) { animation-delay: 0.9s; }
</style>