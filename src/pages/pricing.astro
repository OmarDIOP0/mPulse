---
// src/pages/pricing.astro
import Layout from '../layouts/Layout.astro';
import CTA from '../components/CTA.astro';
---
<Layout title="Tarifs">
    <!-- Hero -->
    <section class="py-20 bg-gradient-to-r from-[#00377d] to-[#002a63] text-white">
        <div class="container mx-auto px-6 text-center">
            <h1 class="text-4xl md:text-5xl font-bold mb-6">Des tarifs adaptés à vos besoins</h1>
            <p class="text-xl max-w-4xl mx-auto">
                Choisissez l'offre qui correspond à votre utilisation. Essai gratuit de <strong class="underline text-secondary">90 jours</strong> , sans engagement.
            </p>
        </div>
    </section>
    
    <!-- Pricing grid -->
    <section class="py-20 bg-white">
        <div class="container mx-auto px-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl mx-auto">
                <!-- Plan Essentiel -->
                <div class="bg-white rounded-xl shadow-md overflow-hidden border border-[#f2f5f9]">
                    <div class="px-6 py-8">
                        <h3 class="text-2xl font-bold text-[#00377d] mb-2">Freemium</h3>
                        <p class="text-gray-600 mb-6">Parfait pour une gestion personnelle</p>
                        <div class="mb-6">
                            <span class="text-4xl font-bold text-[#09090b]">0 FCFA</span>
                            <span class="text-gray-500">/3 mois</span>
                        </div>
                        <a 
                            href="#" 
                            class="block w-full px-4 py-3 bg-[#f2f5f9] text-[#00377d] rounded-lg hover:bg-gray-100 text-center font-medium transition-colors"
                        >
                            Commencer
                        </a>
                    </div>
                    <div class="border-t border-[#f2f5f9] px-6 py-6 bg-[#fafbfd]">
                        <ul class="space-y-3">
                            <li class="flex items-start">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-[#ffd100] mr-2 mt-0.5" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                                </svg>
                                <span class="text-gray-600">3 comptes bancaires</span>
                            </li>
                            <li class="flex items-start">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-[#ffd100] mr-2 mt-0.5" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                                </svg>
                                <span class="text-gray-600">Budgets illimités</span>
                            </li>
                            <li class="flex items-start">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-[#ffd100] mr-2 mt-0.5" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                                </svg>
                                <span class="text-gray-600">Rapports mensuels</span>
                            </li>
                            <li class="flex items-start opacity-50">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400 mr-2 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                                </svg>
                                <span class="text-gray-400">Analyse avancée</span>
                            </li>
                            <li class="flex items-start opacity-50">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400 mr-2 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                                </svg>
                                <span class="text-gray-400">Support prioritaire</span>
                            </li>
                        </ul>
                    </div>
                </div>
                
                <!-- Plan Professionnel (mis en avant) -->
                <div class="bg-white rounded-xl shadow-lg overflow-hidden border-2 border-[#ffd100] transform md:-translate-y-4">
                    <div class="bg-[#ffd100] px-6 py-3 text-center">
                        <span class="text-sm font-bold text-[#09090b] uppercase">Le plus populaire</span>
                    </div>
                    <div class="px-6 py-8">
                        <h3 class="text-2xl font-bold text-[#00377d] mb-2">Professionnel</h3>
                        <p class="text-gray-600 mb-6">Idéal pour les freelances et entreprises</p>
                        <div class="mb-6">
                            <span class="text-4xl font-bold text-[#09090b]">5000 FCFA</span>
                            <span class="text-gray-500">/mois</span>
                        </div>
                        <a 
                            href="#" 
                            class="block w-full px-4 py-3 bg-[#00377d] text-white rounded-lg hover:bg-[#002a63] text-center font-medium transition-colors"
                        >
                            Commencer
                        </a>
                    </div>
                    <div class="border-t border-[#f2f5f9] px-6 py-6 bg-[#fafbfd]">
                        <ul class="space-y-3">
                            <li class="flex items-start">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-[#ffd100] mr-2 mt-0.5" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                                </svg>
                                <span class="text-gray-600">10 comptes bancaires</span>
                            </li>
                            <li class="flex items-start">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-[#ffd100] mr-2 mt-0.5" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                                </svg>
                                <span class="text-gray-600">Budgets illimités</span>
                            </li>
                            <li class="flex items-start">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-[#ffd100] mr-2 mt-0.5" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                                </svg>
                                <span class="text-gray-600">Rapports hebdomadaires</span>
                            </li>
                            <li class="flex items-start">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-[#ffd100] mr-2 mt-0.5" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                                </svg>
                                <span class="text-gray-600">Analyse avancée</span>
                            </li>
                            <li class="flex items-start opacity-50">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400 mr-2 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                                </svg>
                                <span class="text-gray-400">Support prioritaire</span>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            
            <div class="mt-12 text-center">
                <p class="text-gray-600 mb-4">Vous avez besoin d'une solution personnalisée ?</p>
                <a 
                    href="/contact" 
                    class="inline-block px-6 py-3 border-2 border-[#00377d] text-[#00377d] rounded-full hover:bg-[#00377d] hover:text-white transition-colors font-medium"
                >
                    Contactez notre équipe
                </a>
            </div>
        </div>
    </section>
    
    <!-- FAQ -->
    <section class="py-20 bg-[#f2f5f9]">
        <div class="container mx-auto px-6">
            <div class="text-center max-w-3xl mx-auto mb-16">
                <h2 class="text-3xl md:text-4xl font-bold text-[#00377d] mb-4">Questions fréquentes</h2>
                <p class="text-lg text-gray-600">
                    Trouvez des réponses aux questions les plus courantes sur mPulse.
                </p>
            </div>
            
            <div class="max-w-3xl mx-auto">
                <div class="max-h-[500px] overflow-y-auto rounded-xl shadow-md border border-[#e5e7eb] bg-white">
                    {[
                        { 
                            question: "Puis-je essayer mPulse gratuitement ?", 
                            answer: "Oui, nous offrons un essai gratuit de 90 jours sans engagement. Aucune carte de crédit n'est requise pour commencer." 
                        },
                        { 
                            question: "Comment fonctionne la synchronisation bancaire ?", 
                            answer: "mPulse utilise des connexions sécurisées avec les banques via des protocoles chiffrés. Vos identifiants bancaires ne sont jamais stockés sur nos serveurs." 
                        },
                        { 
                            question: "Puis-je annuler à tout moment ?", 
                            answer: "Absolument. Vous pouvez annuler votre abonnement à tout moment sans frais supplémentaires." 
                        },
                        { 
                            question: "mPulse est-il disponible sur mobile ?", 
                            answer: "Oui, mPulse propose des applications natives pour iOS et Android, disponibles sur les stores respectifs." 
                        },
                        { 
                            question: "Quelles banques sont compatibles ?", 
                            answer: "mPulse est compatible avec la plupart des grandes banques françaises et européennes. Consultez notre liste complète pour plus de détails." 
                        },
                    ].map((item, index) => (
                        <div class={`border-b border-[#f2f5f9] ${index === 0 ? '' : ''}`}>
                            <button
                                class="faq-toggle flex items-center justify-between w-full px-6 py-5 text-left hover:bg-[#fafbfd] transition-colors"
                                aria-expanded="false"
                                aria-controls={`faq-content-${index}`}
                                id={`faq-toggle-${index}`}
                                type="button"
                            >
                                <span class="text-lg font-medium text-[#00377d]">{item.question}</span>
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-[#00377d]" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
                                </svg>
                            </button>
                            <div
                                class="px-6 pb-5 hidden"
                                id={`faq-content-${index}`}
                                aria-labelledby={`faq-toggle-${index}`}
                            >
                                <p class="text-gray-600">{item.answer}</p>
                            </div>
                        </div>
                    ))}
                </div>
            </div>
        </div>
    </section>
    <script is:inline>
        document.addEventListener('DOMContentLoaded', () => {
            const faqToggles = document.querySelectorAll('.faq-toggle');
            
            faqToggles.forEach(toggle => {
                toggle.addEventListener('click', () => {
                    const isExpanded = toggle.getAttribute('aria-expanded') === 'true';
                    const content = document.getElementById(toggle.getAttribute('aria-controls'));
                    const icon = toggle.querySelector('svg');
                    
                    // Basculer l'état
                    toggle.setAttribute('aria-expanded', !isExpanded);
                    content.classList.toggle('hidden');
                    
                    // Animation de l'icône
                    if (isExpanded) {
                        icon.classList.remove('rotate-180');
                    } else {
                        icon.classList.add('rotate-180');
                    }
                    
                    // Fermer les autres FAQ
                    if (!isExpanded) {
                        document.querySelectorAll('.faq-toggle').forEach(otherToggle => {
                            if (otherToggle !== toggle) {
                                otherToggle.setAttribute('aria-expanded', 'false');
                                document.getElementById(otherToggle.getAttribute('aria-controls')).classList.add('hidden');
                                otherToggle.querySelector('svg').classList.remove('rotate-180');
                            }
                        });
                    }
                });
            });
        });
</script>
    <CTA />
</Layout>