---
// src/pages/pricing.astro
import Layout from '../layouts/Layout.astro';
import CTA from '../components/CTA.astro';
---
<Layout title="Tarifs">
    <!-- Hero -->
    <section class="py-20 bg-gradient-to-r from-[#00377d] to-[#002a63] text-white">
        <div class="container mx-auto px-6 text-center">
            <h1 class="text-4xl md:text-5xl font-bold mb-6">Des tarifs adaptés à vos besoins</h1>
            <p class="text-xl max-w-4xl mx-auto">
                Choisissez l'offre qui correspond à votre utilisation. Essai gratuit de <strong class="underline text-secondary">90 jours</strong> , sans engagement.
            </p>
        </div>
    </section>
    
    <!-- Pricing grid -->
    <section class="py-20 bg-white">
        <div class="container mx-auto px-6">
            <div class="text-center max-w-3xl mx-auto mb-16">
                <h2 class="text-3xl md:text-4xl font-bold text-[#00377d] mb-4">Choisissez votre formule</h2>
                <p class="text-lg text-gray-600">
                    Une solution adaptée à chaque besoin, de l'auto-entrepreneur à la grande entreprise
                </p>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-6xl mx-auto">
                <!-- Plan Gratuit -->
                <div class="bg-white rounded-xl shadow-md overflow-hidden border border-[#f2f5f9]">
                    <div class="px-6 py-8">
                        <h3 class="text-2xl font-bold text-[#00377d] mb-2">Freemium</h3>
                        <p class="text-gray-600 mb-6">Parfait pour tester ou petites activités</p>
                        <div class="mb-6">
                            <span class="text-4xl font-bold text-[#09090b]">0 FCFA</span>
                            <span class="text-gray-500">/mois</span>
                        </div>
                        <a href="#" class="block w-full px-4 py-3 bg-[#f2f5f9] text-[#00377d] rounded-lg hover:bg-gray-100 text-center font-medium transition-colors">
                            Commencer
                        </a>
                    </div>
                    <div class="border-t border-[#f2f5f9] px-6 py-6 bg-[#fafbfd]">
                        <ul class="space-y-4">
                            <!-- Général -->
                            <li class="flex items-start">
                                <svg class="h-5 w-5 text-[#ffd100] mr-2 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                                </svg>
                                <span><strong>1 utilisateur</strong></span>
                            </li>
                            <li class="flex items-start opacity-50">
                                <svg class="h-5 w-5 text-gray-400 mr-2 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                                </svg>
                                <span>Pas d'utilisateurs supplémentaires</span>
                            </li>
                            <li class="flex items-start">
                                <svg class="h-5 w-5 text-[#ffd100] mr-2 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                                </svg>
                                <span><strong>50 ventes/mois</strong></span>
                            </li>
                            <li class="flex items-start">
                                <svg class="h-5 w-5 text-[#ffd100] mr-2 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                                </svg>
                                <span><strong>50 articles</strong></span>
                            </li>
                            <li class="flex items-start">
                                <svg class="h-5 w-5 text-[#ffd100] mr-2 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                                </svg>
                                <span><strong>100 clients</strong></span>
                            </li>
                            
                            <!-- Caisse -->
                            <li class="pt-3 mt-3 border-t border-gray-100">
                                <span class="text-sm font-semibold text-[#00377d]">CAISSE</span>
                            </li>
                            <li class="flex items-start">
                                <svg class="h-5 w-5 text-[#ffd100] mr-2 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                                </svg>
                                <span>Vente produits/services</span>
                            </li>
                            <li class="flex items-start opacity-50">
                                <svg class="h-5 w-5 text-gray-400 mr-2 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                                </svg>
                                <span>Pas de vente à crédit</span>
                            </li>
                        </ul>
                    </div>
                </div>
                
                <!-- Plan Basic (mis en avant) -->
                <div class="bg-white rounded-xl shadow-lg overflow-hidden border-2 border-[#ffd100] transform md:-translate-y-4">
                    <div class="bg-[#ffd100] px-6 py-3 text-center">
                        <span class="text-sm font-bold text-[#09090b] uppercase">Le plus populaire</span>
                    </div>
                    <div class="px-6 py-8">
                        <h3 class="text-2xl font-bold text-[#00377d] mb-2">Basic</h3>
                        <p class="text-gray-600 mb-6">Idéal pour les petites entreprises</p>
                        <div class="mb-6">
                            <span class="text-4xl font-bold text-[#09090b]">5 000 FCFA</span>
                            <span class="text-gray-500">/mois</span>
                        </div>
                        <a href="#" class="block w-full px-4 py-3 bg-[#00377d] text-white rounded-lg hover:bg-[#002a63] text-center font-medium transition-colors">
                            Choisir cette offre
                        </a>
                    </div>
                    <div class="border-t border-[#f2f5f9] px-6 py-6 bg-[#fafbfd]">
                        <ul class="space-y-4">
                            <!-- Général -->
                            <li class="flex items-start">
                                <svg class="h-5 w-5 text-[#ffd100] mr-2 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                                </svg>
                                <span><strong>1 utilisateur</strong> (+2000 F/utilisateur supp.)</span>
                            </li>
                            <li class="flex items-start">
                                <svg class="h-5 w-5 text-[#ffd100] mr-2 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                                </svg>
                                <span><strong>Ventes illimitées</strong></span>
                            </li>
                            <li class="flex items-start">
                                <svg class="h-5 w-5 text-[#ffd100] mr-2 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                                </svg>
                                <span><strong>100 articles</strong></span>
                            </li>
                            <li class="flex items-start">
                                <svg class="h-5 w-5 text-[#ffd100] mr-2 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                                </svg>
                                <span><strong>Clients illimités</strong></span>
                            </li>
                            
                            <!-- Caisse -->
                            <li class="pt-3 mt-3 border-t border-gray-100">
                                <span class="text-sm font-semibold text-[#00377d]">CAISSE</span>
                            </li>
                            <li class="flex items-start">
                                <svg class="h-5 w-5 text-[#ffd100] mr-2 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                                </svg>
                                <span>Vente à crédit</span>
                            </li>
                            <li class="flex items-start">
                                <svg class="h-5 w-5 text-[#ffd100] mr-2 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                                </svg>
                                <span>Gestion des avoirs clients</span>
                            </li>
                            <li class="flex items-start">
                                <svg class="h-5 w-5 text-[#ffd100] mr-2 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                                </svg>
                                <span>Annulation de vente</span>
                            </li>
                        </ul>
                    </div>
                </div>
                
                <!-- Plan Pro -->
                <div class="bg-white rounded-xl shadow-md overflow-hidden border border-[#f2f5f9]">
                    <div class="px-6 py-8">
                        <h3 class="text-2xl font-bold text-[#00377d] mb-2">Proféssionnel</h3>
                        <p class="text-gray-600 mb-6">Solution complète pour entreprises</p>
                        <div class="mb-6">
                            <span class="text-4xl font-bold text-[#09090b]">15 000 FCFA</span>
                            <span class="text-gray-500">/mois</span>
                        </div>
                        <a href="#" class="block w-full px-4 py-3 bg-[#f2f5f9] text-[#00377d] rounded-lg hover:bg-gray-100 text-center font-medium transition-colors">
                            Choisir cette offre
                        </a>
                    </div>
                    <div class="border-t border-[#f2f5f9] px-6 py-6 bg-[#fafbfd]">
                        <ul class="space-y-4">
                            <!-- Général -->
                            <li class="flex items-start">
                                <svg class="h-5 w-5 text-[#ffd100] mr-2 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                                </svg>
                                <span><strong>3 utilisateurs</strong> (+5000 F/utilisateur supp.)</span>
                            </li>
                            <li class="flex items-start">
                                <svg class="h-5 w-5 text-[#ffd100] mr-2 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                                </svg>
                                <span><strong>Ventes illimitées</strong></span>
                            </li>
                            <li class="flex items-start">
                                <svg class="h-5 w-5 text-[#ffd100] mr-2 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                                </svg>
                                <span><strong>200 articles</strong></span>
                            </li>
                            <li class="flex items-start">
                                <svg class="h-5 w-5 text-[#ffd100] mr-2 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                                </svg>
                                <span><strong>Clients illimités</strong></span>
                            </li>
                            
                            <!-- Caisse -->
                            <li class="pt-3 mt-3 border-t border-gray-100">
                                <span class="text-sm font-semibold text-[#00377d]">CAISSE</span>
                            </li>
                            <li class="flex items-start">
                                <svg class="h-5 w-5 text-[#ffd100] mr-2 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                                </svg>
                                <span>Toutes fonctionnalités Basic +</span>
                            </li>
                            <li class="flex items-start">
                                <svg class="h-5 w-5 text-[#ffd100] mr-2 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                                </svg>
                                <span>Export des rendez-vous</span>
                            </li>
                            <li class="flex items-start">
                                <svg class="h-5 w-5 text-[#ffd100] mr-2 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                                </svg>
                                <span>Création code barre/QRCode</span>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            
            <div class="mt-12 text-center">
                <p class="text-gray-600 mb-4">Vous avez besoin d'une solution personnalisée ?</p>
                <a href="/contact" 
                    class="inline-block px-6 py-3 border-2 border-[#00377d] text-[#00377d] rounded-full hover:bg-[#00377d] hover:text-white transition-colors font-medium"
                >
                    Contactez notre équipe
                </a>
            </div>
        </div>
    </section>
    <!-- FAQ -->
   <section class="py-20 bg-[#f2f5f9]">
    <div class="container mx-auto px-6">
        <div class="text-center max-w-3xl mx-auto mb-16">
            <h2 class="text-3xl md:text-4xl font-bold text-[#00377d] mb-4">Questions fréquentes</h2>
            <p class="text-lg text-gray-600">
                Trouvez des réponses aux questions les plus courantes sur mPulse.
            </p>
        </div>
        
        <div class="max-w-3xl mx-auto">
            <div class="max-h-[500px] overflow-y-auto rounded-xl shadow-md border border-[#e5e7eb] bg-white">
                {[
                    { 
                        id: "faq1",
                        question: "Puis-je essayer mPulse gratuitement ?", 
                        answer: "Oui, nous offrons un essai gratuit de 90 jours sans engagement. Aucune carte de crédit n'est requise pour commencer." 
                    },
                    { 
                        id: "faq2",
                        question: "Comment fonctionne la synchronisation bancaire ?", 
                        answer: "mPulse utilise des connexions sécurisées avec les banques via des protocoles chiffrés. Vos identifiants bancaires ne sont jamais stockés sur nos serveurs." 
                    },
                    { 
                        id: "faq3",
                        question: "Puis-je annuler à tout moment ?", 
                        answer: "Absolument. Vous pouvez annuler votre abonnement à tout moment sans frais supplémentaires." 
                    },
                    { 
                        id: "faq4",
                        question: "mPulse est-il disponible sur mobile ?", 
                        answer: "Oui, mPulse propose des applications natives pour iOS et Android, disponibles sur les stores respectifs." 
                    },
                    { 
                        id: "faq5",
                        question: "Quelles banques sont compatibles ?", 
                        answer: "mPulse est compatible avec la plupart des grandes banques françaises et européennes. Consultez notre liste complète pour plus de détails." 
                    },
                ].map((item, index) => (
                    <div class="border-b border-[#f2f5f9] group">
                        <input 
                            type="checkbox" 
                            id={item.id}
                            class="hidden peer" 
                        />
                        <label 
                            for={item.id}
                            class="flex items-center justify-between w-full px-6 py-5 cursor-pointer hover:bg-[#fafbfd] transition-colors"
                        >
                            <span class="text-lg font-medium text-[#00377d]">{item.question}</span>
                            <svg 
                                xmlns="http://www.w3.org/2000/svg" 
                                class="h-5 w-5 text-[#00377d] transform transition-transform duration-200 peer-checked:rotate-180" 
                                viewBox="0 0 20 20" 
                                fill="currentColor"
                            >
                                <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
                            </svg>
                        </label>
                        <div class="px-6 pb-0 max-h-0 overflow-hidden transition-all duration-300 peer-checked:pb-5 peer-checked:max-h-96">
                            <p class="text-gray-600 pt-0 pb-2">{item.answer}</p>
                        </div>
                    </div>
                ))}
            </div>
        </div>
    </div>
</section>
    <CTA />
</Layout>