// src/pages/auth/register.astro
---
<!DOCTYPE html>
<html lang="fr" class="bg-[#f2f5f9]">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inscription | mPulse</title>
    <link rel="stylesheet" href="/styles/global.css">
</head>
<body class="min-h-screen flex items-center justify-center p-4">
    <div class="w-full max-w-md bg-white p-8 rounded-xl shadow-sm">
        <div class="text-center mb-8">
            <h1 class="text-3xl font-bold text-[#00377d]">m<span class="text-[#ffd100]">Pulse</span></h1>
            <p class="mt-2 text-gray-500">Créez votre compte</p>
        </div>
        
        <form class="space-y-6">
            <div>
                <label for="name" class="block text-sm font-medium text-[#09090b] mb-1">Nom complet</label>
                <input 
                    type="text" 
                    id="name" 
                    required 
                    class="w-full px-4 py-2 border border-[#f2f5f9] rounded-lg focus:outline-none focus:ring-2 focus:ring-[#00377d] focus:border-transparent"
                    placeholder="John Doe"
                >
            </div>
            
            <div>
                <label for="email" class="block text-sm font-medium text-[#09090b] mb-1">Adresse email</label>
                <input 
                    type="email" 
                    id="email" 
                    required 
                    class="w-full px-4 py-2 border border-[#f2f5f9] rounded-lg focus:outline-none focus:ring-2 focus:ring-[#00377d] focus:border-transparent"
                    placeholder="email@exemple.com"
                >
            </div>
            
            <div>
                <label for="password" class="block text-sm font-medium text-[#09090b] mb-1">Mot de passe</label>
                <input 
                    type="password" 
                    id="password" 
                    required 
                    class="w-full px-4 py-2 border border-[#f2f5f9] rounded-lg focus:outline-none focus:ring-2 focus:ring-[#00377d] focus:border-transparent"
                    placeholder="••••••••"
                >
            </div>
            
            <div>
                <label for="confirm-password" class="block text-sm font-medium text-[#09090b] mb-1">Confirmer le mot de passe</label>
                <input 
                    type="password" 
                    id="confirm-password" 
                    required 
                    class="w-full px-4 py-2 border border-[#f2f5f9] rounded-lg focus:outline-none focus:ring-2 focus:ring-[#00377d] focus:border-transparent"
                    placeholder="••••••••"
                >
            </div>
            
            <button 
                type="submit" 
                class="w-full px-4 py-2 bg-[#00377d] text-white rounded-lg hover:bg-[#002a63] transition-colors"
            >
                S'inscrire
            </button>
        </form>
        
        <div class="mt-6 text-center">
            <p class="text-sm text-gray-500">
                Vous avez déjà un compte? 
                <a href="/auth/login" class="text-[#00377d] hover:underline">Se connecter</a>
            </p>
        </div>
    </div>
</body>
</html>