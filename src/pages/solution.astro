---
// src/pages/solutions/particuliers.astro
import Layout from '../layouts/Layout.astro';
import CTA from '../components/CTA.astro';
import AppStore from '../assets/icons/app-store.png';
import GooglePlay from '../assets/icons/play-store.png';
---
    
    
    <!-- Section fonctionnalités -->
    <section class="py-20 bg-[#f2f5f9]">
        <div class="container mx-auto px-6">
            <div class="text-center max-w-3xl mx-auto mb-16">
                <h2 class="text-3xl md:text-4xl font-bold text-[#00377d] mb-4">Solutions pour votre commerce</h2>
                <p class="text-lg text-gray-600">
                    Spécialement conçu pour les besoins des commerçants et PME sénégalaises
                </p>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                {[
                    {
                        title: "Caisse enregistreuse digitale",
                        description: "Remplacez les cahiers de comptes par un système moderne de point de vente.",
                        icon: "M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"
                    },
                    {
                        title: "Gestion des stocks",
                        description: "Suivez vos produits et recevez des alertes pour les réapprovisionnements.",
                        icon: "M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"
                    },
                    {
                        title: "Suivi des clients",
                        description: "Enregistrez les achats et fidélisez votre clientèle.",
                        icon: "M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"
                    },
                    {
                        title: "Statistiques commerciales",
                        description: "Analysez vos meilleures ventes et périodes d'affluence.",
                        icon: "M9 17v-2m3 2v-4m3 4v-6m2 10H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
                    },
                    {
                        title: "Gestion des fournisseurs",
                        description: "Suivez vos commandes et relations avec les fournisseurs locaux.",
                        icon: "M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"
                    },
                    {
                        title: "Rapports journaliers",
                        description: "Générez automatiquement vos rapports de caisse et de performance.",
                        icon: "M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
                    },
                ].map((feature) => (
                    <div class="bg-white p-8 rounded-xl shadow-sm hover:shadow-md transition-shadow">
                        <div class="h-12 w-12 rounded-full bg-[#ffd100]/10 text-[#ffd100] flex items-center justify-center mb-6">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={feature.icon} />
                            </svg>
                        </div>
                        <h3 class="text-xl font-bold text-[#00377d] mb-3">{feature.title}</h3>
                        <p class="text-gray-600">{feature.description}</p>
                    </div>
                ))}
            </div>
        </div>
    </section>

    <!-- Section avantages -->
    <section class=" bg-white">
        <div class="container mx-auto px-6">
            <div class="text-center max-w-3xl mx-auto mb-16">
                <h2 class="text-3xl md:text-4xl font-bold text-[#00377d] mb-4">Pourquoi choisir mPulse POS ?</h2>
                <p class="text-lg text-gray-600">
                    La solution adaptée aux réalités des commerces sénégalais
                </p>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                <div class="bg-[#f2f5f9] p-8 rounded-xl">
                    <h3 class="text-xl font-bold text-[#00377d] mb-4">Problèmes résolus</h3>
                    <ul class="space-y-4">
                        <li class="flex items-start space-x-4">
                            <div class="flex-shrink-0 mt-1 text-[#ffd100]">
                                ✓
                            </div>
                            <p class="text-gray-600">Finis les cahiers et calculs manuels sujets aux erreurs</p>
                        </li>
                        <li class="flex items-start space-x-4">
                            <div class="flex-shrink-0 mt-1 text-[#ffd100]">
                                ✓
                            </div>
                            <p class="text-gray-600">Meilleur suivi des ventes et des stocks en temps réel</p>
                        </li>
                        <li class="flex items-start space-x-4">
                            <div class="flex-shrink-0 mt-1 text-[#ffd100]">
                                ✓
                            </div>
                            <p class="text-gray-600">Gain de temps dans la gestion quotidienne de votre commerce</p>
                        </li>
                        <li class="flex items-start space-x-4">
                            <div class="flex-shrink-0 mt-1 text-[#ffd100]">
                                ✓
                            </div>
                            <p class="text-gray-600">Prise de décision éclairée grâce aux statistiques commerciales</p>
                        </li>
                    </ul>
                </div>
                
                <div class="bg-[#f2f5f9] p-8 rounded-xl">
                    <h3 class="text-xl font-bold text-[#00377d] mb-4">Pour qui ?</h3>
                    <ul class="space-y-4">
                        <li class="flex items-start space-x-4">
                            <div class="flex-shrink-0 mt-1 text-[#ffd100]">
                                ✓
                            </div>
                            <p class="text-gray-600">Commerçants de quartier et marchands ambulants</p>
                        </li>
                        <li class="flex items-start space-x-4">
                            <div class="flex-shrink-0 mt-1 text-[#ffd100]">
                                ✓
                            </div>
                            <p class="text-gray-600">Gérants de boutiques et supérettes</p>
                        </li>
                        <li class="flex items-start space-x-4">
                            <div class="flex-shrink-0 mt-1 text-[#ffd100]">
                                ✓
                            </div>
                            <p class="text-gray-600">PME locales au Sénégal</p>
                        </li>
                        <li class="flex items-start space-x-4">
                            <div class="flex-shrink-0 mt-1 text-[#ffd100]">
                                ✓
                            </div>
                            <p class="text-gray-600">Tous les professionnels voulant digitaliser leur gestion</p>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </section>
    