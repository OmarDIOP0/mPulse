---
// src/pages/contact.astro
import Layout from '../layouts/Layout.astro';
---
<Layout title="Contact">
    <!-- Hero -->
    <section class="relative py-32 bg-gradient-to-r from-[#00377d] to-[#002a63] text-white overflow-hidden">
        <div class="absolute inset-0 opacity-20">
            <div class="absolute inset-0 bg-[url('https://images.unsplash.com/photo-1517245386807-bb43f82c33c4?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2000&q=80')] bg-cover bg-center"></div>
        </div>
        <div class="container mx-auto px-6 relative z-10 text-center">
            <h1 class="text-4xl md:text-5xl font-bold mb-6">Contactez-nous</h1>
            <p class="text-xl max-w-3xl mx-auto">
                Nous sommes là pour répondre à vos questions et vous aider à tirer le meilleur de mPulse.
            </p>
        </div>
    </section>
    
    <!-- Contact grid -->
    <section class="py-20 bg-white">
        <div class="container mx-auto px-6">
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
                <div>
                    <h2 class="text-3xl font-bold text-[#00377d] mb-6">Envoyez-nous un message</h2>
                    
                    <form class="space-y-6">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div>
                                <label for="first-name" class="block text-sm font-medium text-[#09090b] mb-1">Prénom</label>
                                <input 
                                    type="text" 
                                    id="first-name" 
                                    required 
                                    class="w-full px-4 py-3 border border-[#f2f5f9] rounded-lg focus:outline-none focus:ring-2 focus:ring-[#00377d] focus:border-transparent"
                                >
                            </div>
                            <div>
                                <label for="last-name" class="block text-sm font-medium text-[#09090b] mb-1">Nom</label>
                                <input 
                                    type="text" 
                                    id="last-name" 
                                    required 
                                    class="w-full px-4 py-3 border border-[#f2f5f9] rounded-lg focus:outline-none focus:ring-2 focus:ring-[#00377d] focus:border-transparent"
                                >
                            </div>
                        </div>
                        
                        <div>
                            <label for="email" class="block text-sm font-medium text-[#09090b] mb-1">Email</label>
                            <input 
                                type="email" 
                                id="email" 
                                required 
                                class="w-full px-4 py-3 border border-[#f2f5f9] rounded-lg focus:outline-none focus:ring-2 focus:ring-[#00377d] focus:border-transparent"
                            >
                        </div>
                        
                        <div>
                            <label for="subject" class="block text-sm font-medium text-[#09090b] mb-1">Sujet</label>
                            <select 
                                id="subject" 
                                class="w-full px-4 py-3 border border-[#f2f5f9] rounded-lg focus:outline-none focus:ring-2 focus:ring-[#00377d] focus:border-transparent"
                            >
                                <option>Question générale</option>
                                <option>Support technique</option>
                                <option>Demande entreprise</option>
                                <option>Presse</option>
                                <option>Autre</option>
                            </select>
                        </div>
                        
                        <div>
                            <label for="message" class="block text-sm font-medium text-[#09090b] mb-1">Message</label>
                            <textarea 
                                id="message" 
                                rows="5" 
                                required 
                                class="w-full px-4 py-3 border border-[#f2f5f9] rounded-lg focus:outline-none focus:ring-2 focus:ring-[#00377d] focus:border-transparent"
                            ></textarea>
                        </div>
                        
                        <button 
                            type="submit" 
                            class="w-full px-6 py-3 bg-[#00377d] text-white rounded-lg hover:bg-[#002a63] transition-colors font-medium"
                        >
                            Envoyer le message
                        </button>
                    </form>
                </div>
                
                <div>
                    <h2 class="text-3xl font-bold text-[#00377d] mb-6">Autres moyens de contact</h2>
                    
                    <div class="space-y-8">
                        <div class="flex items-start space-x-4">
                            <div class="flex-shrink-0 h-12 w-12 rounded-full bg-[#ffd100]/10 text-[#ffd100] flex items-center justify-center mt-1">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                                </svg>
                            </div>
                            <div>
                                <h3 class="text-lg font-medium text-[#09090b] mb-2">Email</h3>
                                <p class="text-gray-600">contact@mpulse.fr</p>
                                <p class="text-gray-600">support@mpulse.fr (assistance)</p>
                            </div>
                        </div>
                        
                        <div class="flex items-start space-x-4">
                            <div class="flex-shrink-0 h-12 w-12 rounded-full bg-[#ffd100]/10 text-[#ffd100] flex items-center justify-center mt-1">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                                </svg>
                            </div>
                            <div>
                                <h3 class="text-lg font-medium text-[#09090b] mb-2">Téléphone</h3>
                                <p class="text-gray-600">+33 1 23 45 67 89 (Standard)</p>
                                <p class="text-gray-600">+33 1 23 45 67 90 (Support)</p>
                            </div>
                        </div>
                        
                        <div class="flex items-start space-x-4">
                            <div class="flex-shrink-0 h-12 w-12 rounded-full bg-[#ffd100]/10 text-[#ffd100] flex items-center justify-center mt-1">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                                </svg>
                            </div>
                            <div>
                                <h3 class="text-lg font-medium text-[#09090b] mb-2">Bureaux</h3>
                                <p class="text-gray-600">15 Rue de la Finance</p>
                                <p class="text-gray-600">75002 Paris, France</p>
                            </div>
                        </div>
                    </div>
                    
                    <div class="mt-12">
                        <h3 class="text-xl font-bold text-[#00377d] mb-4">Heures d'ouverture</h3>
                        <ul class="space-y-2">
                            <li class="flex justify-between">
                                <span class="text-gray-600">Lundi - Vendredi</span>
                                <span class="font-medium">9h - 18h</span>
                            </li>
                            <li class="flex justify-between">
                                <span class="text-gray-600">Samedi</span>
                                <span class="font-medium">10h - 15h</span>
                            </li>
                            <li class="flex justify-between">
                                <span class="text-gray-600">Dimanche</span>
                                <span class="font-medium">Fermé</span>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>
    
    <!-- Carte -->
    <div class="h-96 bg-gray-200">
        <iframe 
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2624.99144060821!2d2.292292615509614!3d48.85837360866186!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47e66e2964e34e2d%3A0x8ddca9ee380ef7e0!2sTour%20Eiffel!5e0!3m2!1sfr!2sfr!4v1623258136921!5m2!1sfr!2sfr" 
            width="100%" 
            height="100%" 
            style="border:0;" 
            allowfullscreen="" 
            loading="lazy"
        ></iframe>
    </div>
</Layout>