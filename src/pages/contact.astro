---
// src/pages/contact.astro
import Layout from '../layouts/Layout.astro';
---
<Layout title="Contact">
    <!-- Hero -->
    <section class="relative py-32 bg-gradient-to-r from-[#00377d] to-[#002a63] text-white overflow-hidden">
        <div class="absolute inset-0 opacity-20">
            <div class="absolute inset-0 bg-[url('https://images.unsplash.com/photo-1517245386807-bb43f82c33c4?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2000&q=80')] bg-cover bg-center"></div>
        </div>
        <div class="container mx-auto px-6 relative z-10 text-center">
            <h1 class="text-4xl md:text-5xl font-bold mb-6">Contactez-nous</h1>
            <p class="text-xl max-w-4xl mx-auto">
                Nous sommes là pour répondre à vos questions et vous aider à tirer le meilleur de mPulse.
            </p>
        </div>
    </section>
    
    <!-- Contact grid -->
<!-- Section Contact - Version Premium -->
<section class="py-24 bg-gradient-to-b from-white to-[#f8fafc]">
    <div class="container mx-auto px-6 max-w-6xl">
        <div class="text-center mb-16">
            <h2 class="text-4xl md:text-5xl font-bold text-[#00377d] mb-4">Contactez notre équipe</h2>
            <p class="text-xl text-gray-600 max-w-2xl mx-auto">Nous sommes là pour répondre à vos questions et vous accompagner.</p>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 bg-white rounded-2xl shadow-xl overflow-hidden">
            <!-- Formulaire de contact -->
            <div class="p-10">
                <h3 class="text-2xl font-bold text-[#00377d] mb-8">Envoyez-nous un message</h3>
                
                <form class="space-y-6">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div class="space-y-2">
                            <label for="first-name" class="block text-sm font-medium text-gray-700">Prénom</label>
                            <input 
                                type="text" 
                                id="first-name" 
                                required 
                                class="w-full px-5 py-3 border border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-[#00377d] focus:border-transparent transition-all"
                                placeholder="Votre prénom"
                            >
                        </div>
                        <div class="space-y-2">
                            <label for="last-name" class="block text-sm font-medium text-gray-700">Nom</label>
                            <input 
                                type="text" 
                                id="last-name" 
                                required 
                                class="w-full px-5 py-3 border border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-[#00377d] focus:border-transparent transition-all"
                                placeholder="Votre nom"
                            >
                        </div>
                    </div>
                    
                    <div class="space-y-2">
                        <label for="email" class="block text-sm font-medium text-gray-700">Email</label>
                        <input 
                            type="email" 
                            id="email" 
                            required 
                            class="w-full px-5 py-3 border border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-[#00377d] focus:border-transparent transition-all"
                            placeholder="email@exemple.com"
                        >
                    </div>
                    
                    <div class="space-y-2">
                        <label for="subject" class="block text-sm font-medium text-gray-700">Sujet</label>
                        <select 
                            id="subject" 
                            class="w-full px-5 py-3 border border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-[#00377d] focus:border-transparent transition-all appearance-none bg-[url('data:image/svg+xml;base64,')] bg-no-repeat bg-[center_right_1rem]"
                        >
                            <option disabled selected>Sélectionnez un sujet</option>
                            <option>Question générale</option>
                            <option>Support technique</option>
                            <option>Demande entreprise</option>
                            <option>Partenariat</option>
                            <option>Autre</option>
                        </select>
                    </div>
                    
                    <div class="space-y-2">
                        <label for="message" class="block text-sm font-medium text-gray-700">Message</label>
                        <textarea 
                            id="message" 
                            rows="5" 
                            required 
                            class="w-full px-5 py-3 border border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-[#00377d] focus:border-transparent transition-all"
                            placeholder="Décrivez votre demande..."
                        ></textarea>
                    </div>
                    
                    <button 
                        type="submit" 
                        class="w-full px-8 py-4 bg-gradient-to-r from-[#00377d] to-[#002a63] text-white rounded-xl hover:opacity-90 transition-all font-medium shadow-md flex items-center justify-center space-x-2"
                    >
                        <span>Envoyer le message</span>
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                        </svg>
                    </button>
                </form>
            </div>
            
            <!-- Informations de contact -->
            <div class="bg-[#00377d] p-10 text-white">
                <h3 class="text-2xl font-bold mb-8">Autres moyens de contact</h3>
                
                <div class="space-y-8">
                    <!-- Carte Email -->
                    <div class="flex items-start gap-6 p-6 bg-white/10 rounded-xl backdrop-blur-sm">
                        <div class="flex-shrink-0 h-14 w-14 rounded-full bg-[#ffd100] text-[#00377d] flex items-center justify-center">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                            </svg>
                        </div>
                        <div>
                            <h4 class="text-lg font-semibold mb-2">Email</h4>
                            <p class="text-white/90">contact@mpulse.fr</p>

                        </div>
                    </div>
                    
                    <!-- Carte Téléphone -->
                    <div class="flex items-start gap-6 p-6 bg-white/10 rounded-xl backdrop-blur-sm">
                        <div class="flex-shrink-0 h-14 w-14 rounded-full bg-[#ffd100] text-[#00377d] flex items-center justify-center">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                            </svg>
                        </div>
                        <div>
                            <h4 class="text-lg font-semibold mb-2">Téléphone</h4>
                            <p class="text-white/90">+221 76 723 88 88</p>
                        </div>
                    </div>
                    
                    <!-- Carte Adresse -->
                    <div class="flex items-start gap-6 p-6 bg-white/10 rounded-xl backdrop-blur-sm">
                        <div class="flex-shrink-0 h-14 w-14 rounded-full bg-[#ffd100] text-[#00377d] flex items-center justify-center">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                            </svg>
                        </div>
                        <div>
                            <h4 class="text-lg font-semibold mb-2">Bureaux</h4>
                            <p class="text-white/90">Ouakam</p>
                            <p class="text-white/90">Ouakam Rue...</p>
                        </div>
                    </div>
                </div>
                
                <!-- Horaires -->
                <div class="mt-12 p-6 bg-white/10 rounded-xl backdrop-blur-sm">
                    <h4 class="text-xl font-semibold mb-4">Horaires d'ouverture</h4>
                    <ul class="space-y-3">
                        <li class="flex justify-between border-b border-white/10 pb-3">
                            <span class="text-white/90">Lundi - Vendredi</span>
                            <span class="font-medium">9h - 18h</span>
                        </li>
                        <li class="flex justify-between border-b border-white/10 pb-3">
                            <span class="text-white/90">Samedi</span>
                            <span class="font-medium">10h - 15h</span>
                        </li>
                        <li class="flex justify-between">
                            <span class="text-white/90">Dimanche</span>
                            <span class="font-medium">Fermé</span>
                        </li>
                    </ul>
                </div>
                
                <!-- Réseaux sociaux -->
                <div class="mt-8 flex space-x-4">
                    <a href="https://www.instagram.com/mpulse_business_app?igsh=OTk1Yzg0Z2VrbmVr" class="h-10 w-10 rounded-full bg-white/10 hover:bg-white/20 transition-colors flex items-center justify-center" target="_blank">
                        <span class="sr-only">Intagram</span>
                        <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z" />
                        </svg>
                    </a>
                    <a href="https://www.linkedin.com/company/mpulsepos/" target="_blank" class="h-10 w-10 rounded-full bg-white/10 hover:bg-white/20 transition-colors flex items-center justify-center">
                        <span class="sr-only">LinkedIn</span>
                         <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z" />
                        </svg>
                    </a>
                    <a href="https://www.facebook.com/share/1F36Uv3pZ5/" target="_blank" class="h-10 w-10 rounded-full bg-white/10 hover:bg-white/20 transition-colors flex items-center justify-center">
                        <span class="sr-only">Facebook</span>
                        <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M22.675 0h-21.35C.6 0 0 .6 0 1.337v21.326C0 23.4.6 24 1.325 24h11.494v-9.294H9.692v-3.622h3.127V8.413c0-3.1 1.893-4.788 4.659-4.788 1.325 0 2.463.099 2.794.143v3.24l-1.918.001c-1.504 0-1.796.715-1.796 1.763v2.313h3.59l-.467 3.622h-3.123V24h6.127c.729 0 1.325-.6 1.325-1.337V1.337C24 .6 23.404 0 22.675 0z"/>
                        </svg>
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

    
    <!-- Carte -->
<div class="h-96 bg-gray-200">
    <iframe 
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3859.089600644113!2d-17.4750729246875!3d14.72167708574908!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0xec172e8c9d6d011%3A0x1a1c5b1e5b1e5b1e!2sOuakam%2C%20Dakar%2C%20S%C3%A9n%C3%A9gal!5e0!3m2!1sfr!2sfr!4v1623258136921!5m2!1sfr!2sfr" 
        width="100%" 
        height="100%" 
        style="border:0;" 
        allowfullscreen="" 
        loading="lazy"
    ></iframe>
</div>

</Layout>