---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import FeatureCard from '../components/FeatureCard.astro';
import Testimonial from '../components/Testimonial.astro';
import CTA from '../components/CTA.astro';
import Dashboard from '../assets/icons/dashboardF.png';
import Stock from '../assets/icons/stock.jpg';
import Performance from '../assets/icons/performance.jpg';
import ScreenDashboard from '../assets/app/dashboard.jpg';
import ScreenAutre from '../assets/app/autre.jpg';
import ScreenCaisse from '../assets/app/caisse.jpg';
import ScreenDepense from '../assets/app/depense.jpg';
import ScreenEcommerce from '../assets/app/ecommerce1.jpg';
---
<Layout title="Accueil">
    <Hero />
    
<!-- Section valeur phare avec carousel Tailwind CSS -->
<section class="py-20 bg-gradient-to-r from-[#f8fafc] to-[#f2f5f9]">
    <div class="container mx-auto px-6">
        <div class="flex flex-col lg:flex-row items-center gap-12">
            <!-- Contenu texte -->
            <div class="lg:w-1/2">
                <h2 class="text-3xl md:text-3xl font-bold text-[#00377d] mb-6">
                    Votre solution de paiement <span class="text-secondary">tout-en-un</span>
                </h2>
                
                <!-- Onglets Particulier/Entreprise -->
                <div class="flex mb-8 border-b border-gray-200" id="tabs">
                    <button 
                        data-tab="particulier"
                        class="px-6 py-3 font-medium border-b-2 border-primary text-primary transition-colors"
                    >
                        Particulier
                    </button>
                    <button 
                        data-tab="entreprise"
                        class="px-6 py-3 font-medium border-b-2 text-gray-500 hover:text-primary transition-colors"
                    >
                        Entreprise
                    </button>
                </div>
                <div>
                    <!-- Contenu Particulier -->
                    <div data-tab-content="particulier" class="animate-fadeIn">
                        <p class="text-lg text-gray-600 mb-8 max-w-2xl">
                            Gérez vos finances personnelles avec des outils <span class="font-semibold text-primary">intuitifs et performants</span>, conçus pour simplifier votre quotidien.
                        </p>
                        
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <!-- Carte Paiements -->
                            <div class="bg-white p-6 rounded-xl shadow-lg border-l-4 border-secondary transform transition-all hover:-translate-y-1 hover:shadow-xl">
                                <div class="flex items-start mb-4">
                                    <div class="bg-primary/10 p-2 rounded-lg mr-4">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z" />
                                        </svg>
                                    </div>
                                    <div>
                                        <h3 class="text-xl font-bold text-primary mb-2">Paiements instantanés</h3>
                                        <p class="text-gray-600">Effectuez et recevez des paiements en quelques secondes.</p>
                                    </div>
                                </div>
                            </div>

                            <!-- Carte Budget -->
                            <div class="bg-white p-6 rounded-xl shadow-lg border-l-4 border-secondary transform transition-all hover:-translate-y-1 hover:shadow-xl">
                                <div class="flex items-start mb-4">
                                    <div class="bg-primary/10 p-2 rounded-lg mr-4">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                                        </svg>
                                    </div>
                                    <div>
                                        <h3 class="text-xl font-bold text-primary mb-2">Suivi budgétaire</h3>
                                        <p class="text-gray-600">Visualisez vos dépenses et revenus en temps réel.</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Section Entreprise -->
                    <div data-tab-content="entreprise" class="hidden animate-fadeIn">
                        <p class="text-lg text-gray-600 mb-8 max-w-2xl">
                            Optimisez la <span class="font-semibold text-primary">gestion de votre entreprise</span> avec des solutions professionnelles complètes.
                        </p>
                        
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <!-- Carte Gestion de caisse -->
                            <div class="bg-white p-6 rounded-xl shadow-lg border-l-4 border-secondary transform transition-all hover:-translate-y-1 hover:shadow-xl">
                                <div class="flex items-start mb-4">
                                    <div class="bg-primary/10 p-2 rounded-lg mr-4">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
                                        </svg>
                                    </div>
                                    <div>
                                        <h3 class="text-xl font-bold text-primary mb-2">Caisse intelligente</h3>
                                        <p class="text-gray-600">Gérez vos ventes, stocks et employés en un seul endroit.</p>
                                    </div>
                                </div>
                            </div>

                            <!-- Carte Rapports -->
                            <div class="bg-white p-6 rounded-xl shadow-lg border-l-4 border-secondary transform transition-all hover:-translate-y-1 hover:shadow-xl">
                                <div class="flex items-start mb-4">
                                    <div class="bg-primary/10 p-2 rounded-lg mr-4">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17v-2m3 2v-4m3 4v-6m2 10H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                                        </svg>
                                    </div>
                                    <div>
                                        <h3 class="text-xl font-bold text-primary mb-2">Analyses commerciales</h3>
                                        <p class="text-gray-600">Obtenez des insights pour développer votre activité.</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Mockup téléphone avec carousel -->
            <div class="lg:w-1/2 relative">
                <div class="relative mx-auto w-full max-w-xs">
                    <!-- Bordure jaune -->
                    <div class="absolute inset-0 rounded-[40px] border-[14px] border-secondary shadow-2xl transform rotate-2"></div>
                    <div class="relative rounded-[28px] overflow-hidden bg-gray-800 aspect-[9/19]">
                        <!-- Slides -->
                        <div class="carousel relative h-full w-full">
                            <!-- Slide Dasboard -->
                            <div class="carousel-item absolute inset-0 w-full h-full" data-slide="accueil">
                                <img 
                                    src= {ScreenDashboard.src}
                                    alt="Capture accueil" 
                                    class="w-full h-full object-cover"
                                />
                            </div>
                            
                            <!-- Slide Caisse -->
                            <div class="carousel-item absolute inset-0 w-full h-full hidden" data-slide="paiements">
                                <img 
                                    src= {ScreenCaisse.src}
                                    alt="Capture caisse" 
                                    class="w-full h-full object-cover"
                                />
                            </div>
                            
                            <!-- Slide Depenses -->
                            <div class="carousel-item absolute inset-0 w-full h-full hidden" data-slide="depenses">
                                <img 
                                    src= {ScreenDepense.src}
                                    alt="Capture Depenses" 
                                    class="w-full h-full object-cover"
                                />
                            </div>
                             <!-- Slide Ecommerce -->
                             <div class="carousel-item absolute inset-0 w-full h-full hidden" data-slide="ecommerce">
                                <img 
                                    src= {ScreenEcommerce.src}
                                    alt="Capture Ecommerce" 
                                    class="w-full h-full object-cover"
                                />
                            </div>
                            
                            <!-- Slide Autre -->
                            <div class="carousel-item absolute inset-0 w-full h-full hidden" data-slide="Autre">
                                <img 
                                    src= {ScreenAutre.src}
                                    alt="Capture autre" 
                                    class="w-full h-full object-cover"
                                />
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Navigation inférieure -->
                <div class="mt-8 flex justify-center" id="mobile-nav">
                    <button 
                        data-slide-target="accueil"
                        class="flex flex-col items-center px-2 py-2 rounded-full text-sm font-medium bg-primary text-white"
                    >
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                        </svg>
                        <span class="mt-1">Dashboard</span>
                    </button>
                    <button 
                        data-slide-target="paiements"
                        class="flex flex-col items-center px-2 py-2 rounded-full text-sm font-medium text-gray-600 hover:text-primary"
                    >
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z" />
                        </svg>
                        <span class="mt-1">Caisse</span>
                    </button>
                    <button 
                        data-slide-target="depenses"
                        class="flex flex-col items-center px-2 py-2 rounded-full text-sm font-medium text-gray-600 hover:text-primary"
                    >
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7h16M4 11h16M4 15h16M4 19h16" />
                        </svg>
                        <span class="mt-1">Depenses</span>
                    </button>
                    <button 
                        data-slide-target="ecommerce"
                        class="flex flex-col items-center px-2 py-2 rounded-full text-sm font-medium text-gray-600 hover:text-primary"
                    >
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2 9m5-9v9m4-9v9m1-16h-6" />
                        </svg>
                        <span class="mt-1">Ecommerce</span>
                    </button>
                    <button 
                        data-slide-target="Autre"
                        class="flex flex-col items-center px-2 py-2 rounded-full text-sm font-medium text-gray-600 hover:text-primary"
                    >
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                        </svg>
                        <span class="mt-1">Autre</span>
                    </button>
                </div>
            </div>
        </div>
    </section>
    
    <!-- Section fonctionnalités -->
    <section class="py-20 bg-white">
        <div class="container mx-auto px-6">
            <div class="text-center max-w-3xl mx-auto mb-16">
                <h2 class="text-3xl md:text-4xl font-bold text-[#00377d] mb-4">Fonctionnalités clés</h2>
                <p class="text-lg text-gray-600">
                    Découvrez comment mPulse transforme la gestion commerciale en expérience intuitive et performante.
                </p>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                <!-- Carte 1 -->
                <div class="bg-white rounded-xl shadow-lg overflow-hidden border border-gray-100 transform transition-all hover:shadow-xl">
                    <img src= {Performance.src}
                         alt="Gestion de caisse" 
                         class="w-full h-48 object-cover">
                    <div class="p-6">
                        <div class="flex items-center mb-4">
                            <div class="bg-primary/10 p-2 rounded-lg mr-4">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
                                </svg>
                            </div>
                            <h3 class="text-xl font-bold text-primary">Caisse intelligente</h3>
                        </div>
                        <p class="text-gray-600">Gérez vos ventes en temps réel avec une interface simple et efficace, adaptée à tous les types de commerce.</p>
                    </div>
                </div>
                
                <!-- Carte 2 -->
                <div class="bg-white rounded-xl shadow-lg overflow-hidden border border-gray-100 transform transition-all hover:shadow-xl">
                    <img src= {Stock.src}
                         alt="Gestion de stock" 
                         class="w-full h-48 object-cover">
                    <div class="p-6">
                        <div class="flex items-center mb-4">
                            <div class="bg-primary/10 p-2 rounded-lg mr-4">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
                                </svg>
                            </div>
                            <h3 class="text-xl font-bold text-primary">Gestion de stock</h3>
                        </div>
                        <p class="text-gray-600">Suivez vos entrées et sorties de produits, avec alertes automatiques pour les seuils critiques.</p>
                    </div>
                </div>
                
                <!-- Carte 3 -->
                <div class="bg-white rounded-xl shadow-lg overflow-hidden border border-gray-100 transform transition-all hover:shadow-xl">
                    <img src= {Dashboard.src} 
                         alt="Analytique" 
                         class="w-full h-48 object-cover">
                    <div class="p-6">
                        <div class="flex items-center mb-4">
                            <div class="bg-primary/10 p-2 rounded-lg mr-4">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17v-2m3 2v-4m3 4v-6m2 10H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                                </svg>
                            </div>
                            <h3 class="text-xl font-bold text-primary">Tableau de bord</h3>
                        </div>
                        <p class="text-gray-600">Analysez vos performances avec des graphiques clairs et des indicateurs personnalisables.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
    
    <!-- Section Chiffres clés -->
    <section class="py-20 bg-gradient-to-br from-[#00377d] to-[#0066cc] text-white">
        <div class="container mx-auto px-6">
            <div class="text-center max-w-3xl mx-auto mb-16">
                <h2 class="text-3xl md:text-4xl font-bold mb-4">mPulse en chiffres</h2>
                <p class="text-lg opacity-90">
                    La solution préférée des commerçants et entrepreneurs au Sénégal
                </p>
            </div>
            
            <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
                <!-- Chiffre 1 -->
                <div class="text-center">
                    <div class="text-4xl md:text-5xl font-bold mb-3">10+</div>
                    <div class="text-lg opacity-90">Utilisateurs actifs</div>
                </div>
                
                <!-- Chiffre 2 -->
                <div class="text-center">
                    <div class="text-4xl md:text-5xl font-bold mb-3">500K+</div>
                    <div class="text-lg opacity-90">FCFA échangés</div>
                </div>
                
                <!-- Chiffre 3 -->
                <div class="text-center">
                    <div class="text-4xl md:text-5xl font-bold mb-3">24/7</div>
                    <div class="text-lg opacity-90">Disponibilité</div>
                </div>
                
                <!-- Chiffre 4 -->
                <div class="text-center">
                    <div class="text-4xl md:text-5xl font-bold mb-3">95%</div>
                    <div class="text-lg opacity-90">Satisfaction clients</div>
                </div>
            </div>
            
            <!-- Bouton CTA -->
            <div class="text-center mt-16">
                <a href="#" class="inline-flex items-center px-8 py-4 bg-secondary hover:bg-secondary/90 text-white font-bold rounded-full transition-all transform hover:scale-105">
                    <span>Démarrer avec mPulse</span>
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                    </svg>
                </a>
            </div>
        </div>
    </section>
    <!-- Section CTA -->
    <CTA />
</Layout>

 <script>
    // Gestion des onglets
    document.querySelectorAll('[data-tab]').forEach(tab => {
        tab.addEventListener('click', () => {
            // Désactive tous les onglets
            document.querySelectorAll('[data-tab]').forEach(t => {
                t.classList.remove('border-primary', 'text-primary');
                t.classList.add('text-gray-500');
            });
            
            // Active l'onglet cliqué
            tab.classList.add('border-primary', 'text-primary');
            tab.classList.remove('text-gray-500');
            
            // Cache tous les contenus
            document.querySelectorAll('[data-tab-content]').forEach(content => {
                content.classList.add('hidden');
            });
            
            // Affiche le contenu correspondant
            const tabName = tab.getAttribute('data-tab');
            const tabContent = document.querySelector(`[data-tab-content="${tabName}"]`);
            if (tabContent) {
                tabContent.classList.remove('hidden');
            }
        });
    });

    // Gestion du carousel
    document.querySelectorAll('[data-slide-target]').forEach(button => {
        button.addEventListener('click', () => {
            // Désactive tous les boutons
            document.querySelectorAll('[data-slide-target]').forEach(btn => {
                btn.classList.remove('bg-primary', 'text-white');
                btn.classList.add('text-gray-600', 'hover:text-primary');
            });
            
            // Active le bouton cliqué
            button.classList.add('bg-primary', 'text-white');
            button.classList.remove('text-gray-600', 'hover:text-primary');
            
            // Cache toutes les slides
            document.querySelectorAll('.carousel-item').forEach(slide => {
                slide.classList.add('hidden');
            });
            
            // Affiche la slide correspondante
            const slideName = button.getAttribute('data-slide-target');
            const slideElem = document.querySelector(`[data-slide="${slideName}"]`);
            if (slideElem) {
                slideElem.classList.remove('hidden');
            }
        });
    });

    // Mise à jour de l'heure
    function updateTime() {
        const now = new Date();
        const updateTimeElem = document.getElementById('update-time');
        if (updateTimeElem) {
            updateTimeElem.textContent = now.toLocaleString();
        }
    }
    updateTime();
    setInterval(updateTime, 1000);
    </script>